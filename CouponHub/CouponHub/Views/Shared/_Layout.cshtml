<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CouponHub</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CouponHub", "Index", "Home", new { area = "Common" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", new { Controller = "Home", Area = "Common" })</li>
                    <li>@Html.ActionLink("Coupons", "Index", new { Controller = "BrowseURL", Area = "Common" })</li>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("A"))
                        {
                            <li>@Html.ActionLink("Create Category", "Index", new { Controller = "Category", Area = "Admin" })</li>
                            <li>@Html.ActionLink("Categories", "Index", new { Controller = "ListCategory", Area = "Admin" })</li>
                            <li>@Html.ActionLink("Approve", "Index", new { Controller = "ApproveURLs", Area = "Admin" })</li>
                            <li>@Html.ActionLink("Users", "Index", new { Controller = "ListUser", Area = "Admin" })</li>
                        }
                        if (User.IsInRole("A") || User.IsInRole("U"))
                        {
                            <li>@Html.ActionLink("Submit Coupon", "Index", new { Controller = "URL", Area = "User" })</li>
                            <li>@Html.ActionLink("SignOut", "SignOut", new { Controller = "Login", Area = "Security" })</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", new { Controller = "Login", Area = "Security" })</li>
                        <li>@Html.ActionLink("Register", "Index", new { Controller = "Register", Area = "Security" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
            <blockquote class="pull-right">
                <p>Cogito ergo sum.</p>
                <small>René Descartes</small>
            </blockquote>
            <p>&copy; @DateTime.Now.Year - CouponHub Using ASP.NET MVC And Entity Framework</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>